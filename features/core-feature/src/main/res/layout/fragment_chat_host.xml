<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.slyworks.core_feature.chat.ChatHostFragment"
    >

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/layout_vp_frag_chat_host"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/l_collapsing_toolbar"
            layout ="@layout/collapsing_toolbar_frag_chat"
            />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/vpHost_frag_chat_host"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
            />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_container_chat_host"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
        />

</androidx.coordinatorlayout.widget.CoordinatorLayout>