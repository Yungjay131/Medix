<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvTitle_dialog_exit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Exit"
        android:textSize="20sp"/>

    <View
        android:id="@+id/divider_horizontal_1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle_dialog_exit"
        android:background="@color/Grey"
        android:layout_marginTop="10dp"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvText_dialog_exit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider_horizontal_1"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text="Leaving so soon?\nAre you sure you want to exit?"
        android:textSize="20sp"
        android:gravity="center"/>

    <View
        android:id="@+id/divider_horizontal_2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvText_dialog_exit"
        android:layout_marginTop="10dp"
        android:background="@color/Grey"/>

    <View
        android:id="@+id/divider_vertical_1"
        android:layout_width="0.5dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider_horizontal_2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/Grey"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvExit_dialog_exit"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/divider_vertical_1"
        app:layout_constraintTop_toBottomOf="@id/divider_horizontal_2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Exit"
        android:textSize="20sp"
        android:gravity="center" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvCancel_dialog_exit"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@id/divider_vertical_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider_horizontal_2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Cancel"
        android:textSize="20sp"
        android:gravity="center"/>

</androidx.constraintlayout.widget.ConstraintLayout>